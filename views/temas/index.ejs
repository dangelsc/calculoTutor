<% layout('../layout/index') -%>

<%block('titulo',titulo) -%>

<div class="card-header border-0">
        <h3 class="mb-0">Lista de temas</h3>
        <a href="/temas/create"> <div class="icon icon-shape bg-danger text-white rounded-circle shadow">
                <i class="ni ni-fat-add"></i>
              </div></a>
      </div>
      <div class="table-responsive">
        <table class="table align-items-center table-flush">
          <thead class="thead-light">
            <tr>
              
              <th scope="col">Borrar</th>
              <th scope="col">Editar</th>
              <th scope="col">Nombre tema</th>
              <th scope="col">Dificultad</th>
              
            </tr>
          </thead>
          <tbody>
              <% for(i=0;i<lista.length;i++){ %>
            <tr>
              <th scope="row">
                <div class="media align-items-center">
                 
                  <a href="#" data-toggle="modal" data-target="#exampleModal<%=lista[i]._id%>"> <div class=" rounded-circle mr-3 icon-shape shadow">
                        <i class="ni ni-fat-remove"></i>
                      </div></a>
                
                </div>
              </th>
              <td>
                    <a href="/temas/contenido/<%=lista[i]._id%>"> <div class=" rounded-circle mr-3 icon-shape shadow">
                            <i class="fas fa-search"></i>
                          </div></a>
              </td>
              <td>
                <%=lista[i].titulo%>
              </td>
              <td>
                <div class="d-flex align-items-center">
                  
                  <div>
                    <div class="progress">
                      <div class="progress-bar bg-<%= lista[i].dificultad=='a'?
                                                        'warning':(
                                                            lista[i].dificultad=='m'?'info':'success'
                                                        )%>" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;"></div>
                    </div>
                  </div>
                </div>
              </td>
              <td class="text-right">
                    <div class="modal fade" id="exampleModal<%=lista[i]._id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5 class="modal-title" id="exampleModalLabel">Confirmacion de elemento</h5>
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                                </div>
                                <div class="modal-body">
                                  Esta seguro de borrar el elemento <%=lista[i].titulo%>
                                </div>
                                <div class="modal-footer">
                                  <button  type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                  <a href="/temas/delete/<%=lista[i]._id%>" type="button" class="btn btn-primary">Si</a>
                                </div>
                              </div>
                            </div>
                          </div>
                
                <div class="dropdown">
                  <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v"></i>
                  </a>
                  <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                    <a class="dropdown-item" data-toggle="modal" data-target="#exampleModal<%=lista[i]._id%>" href="/temas/delete/<%=lista[i]._id%>">Borrar</a>
                    <a class="dropdown-item" href="/temas/edit/<%=lista[i]._id%>">Editar</a>
                    
                  </div>
                </div>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>





      <div class="card-footer py-4">
        <nav aria-label="...">
          <ul class="pagination justify-content-end mb-0">
            <li class="page-item disabled">
              <a class="page-link" href="#" tabindex="-1">
                <i class="fas fa-angle-left"></i>
                <span class="sr-only">Previous</span>
              </a>
            </li>
            <li class="page-item active">
              <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
            </li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
              <a class="page-link" href="#">
                <i class="fas fa-angle-right"></i>
                <span class="sr-only">Next</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>

     
